@using Course_Work.Models
@model Algoritm

@{
    ViewBag.Title = "Algoritm";
}
@Styles.Render("~/Content/Bootstrap.min.css")
<div id="input_data">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2>Розбиття графа на підграфи</h2>
        <h3>Введіть дані для розбиття</h3>
        <div class="form-group">
            <h4>Вкажіть кількість вершин у першому підграфі </h4>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Variables, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.Variables, "", new { @class = "text-danger" })
            </div>
        </div>
        <br><br>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Розбити граф" class="btn btn-default" />
            </div>
        </div>


    </div>
    }



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

